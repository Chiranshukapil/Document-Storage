@model Document_Storage_System.Models.Entities.Department

@{
    ViewData["Title"] = "Delete Department";
}

<h2>Confirm Delete</h2>

<p>Are you sure you want to delete this department?</p>

<div>
    <strong>Name:</strong> @Model.Name <br />
    <strong>Description:</strong> @Model.Description
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="DepartmentId" />
    <button type="submit" class="btn btn-danger mt-2">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
</form>

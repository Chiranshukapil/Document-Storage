@model Document_Storage_System.Models.ViewModels.DocumentUploadViewModel
@{
    ViewData["Title"] = "Upload Document";
    var topic = ViewBag.Topic as Document_Storage_System.Models.Entities.Topic;
}

<h2>Upload Document to: @topic?.Path</h2>

<form asp-action="Upload" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="TopicId" />

    <div class="form-group mb-2">
        <label asp-for="Title" class="form-label">Document Title</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="UploadedFile" class="form-label">Choose File</label>
        <input asp-for="UploadedFile" class="form-control" type="file" />
        <span asp-validation-for="UploadedFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Upload</button>
    <a asp-action="Index" asp-route-topicId="@Model.TopicId" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

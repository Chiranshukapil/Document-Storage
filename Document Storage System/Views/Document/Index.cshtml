@model IEnumerable<Document_Storage_System.Models.Entities.Document>
@{
    ViewData["Title"] = "Documents";
    var topic = ViewBag.Topic as Document_Storage_System.Models.Entities.Topic;
    var libraryId = ViewBag.LibraryId as int?;
    var search = ViewBag.Search as string;
}

<div class="container mt-4">
    <h2 class="mb-4">
        <i class="bi bi-file-earmark-text-fill text-primary"></i> Documents in: <span class="text-muted">@topic?.Path</span>
    </h2>

    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <div>
            <a class="btn btn-primary me-2" asp-action="Upload" asp-route-topicId="@topic?.TopicId">
                <i class="bi bi-upload"></i> Upload New Document
            </a>
            <a class="btn btn-secondary" asp-controller="Topic" asp-action="Index" asp-route-libraryId="@libraryId">
                <i class="bi bi-arrow-left"></i> Back to Topics
            </a>
        </div>
    </div>

    <!-- 🔍 Search Form -->
    <form asp-action="Index" method="get" class="mb-4">
        <input type="hidden" name="topicId" value="@topic?.TopicId" />
        <div class="input-group">
            <input type="text" name="search" class="form-control" placeholder="Search by title, file name, or uploader..." value="@search" />
            <button type="submit" class="btn btn-outline-primary">
                <i class="bi bi-search"></i> Search
            </button>
        </div>
    </form>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No documents found.</div>
    }
    else
    {
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>File Name</th>
                    <th>Uploaded By</th>
                    <th>Uploaded At</th>
                    <th>Size</th>
                    <th style="min-width: 200px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var doc in Model)
                {
                    <tr>
                        <td>@doc.Title</td>
                        <td><code>@doc.FileName</code></td>
                        <td>@doc.UploadedBy?.UserName</td>
                        <td>@doc.CreatedAt.ToString("dd MMM yyyy, hh:mm tt")</td>
                        <td><code>@(Math.Round(doc.FileSize / 1024.0, 2)) KB</code></td>
                        <td>
                            <div class="d-flex gap-2 flex-wrap">
                                <a class="btn btn-sm btn-success" href="@doc.FilePath" target="_blank">
                                    ⬇️ Download
                                </a>
                                <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@doc.DocumentId">
                                    📝 Details
                                </a>
                                <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this document?');">
                                    <input type="hidden" name="id" value="@doc.DocumentId" />
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        🗑️ Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

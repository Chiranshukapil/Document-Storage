@model Document_Storage_System.Models.Entities.Topic
@{
    ViewData["Title"] = "Edit Topic";
    var libraryId = ViewBag.LibraryId as int?;
    var parentTopics = ViewBag.Topics as List<Document_Storage_System.Models.Entities.Topic>;
    var hasAccess = Model != null && libraryId != null;
}

@if (!hasAccess)
{
    <div class="alert alert-danger">
        You do not have permission to edit this topic.
    </div>
}
else
{
    <h2>Edit Topic</h2>

    <form asp-action="Edit" asp-route-id="@Model.TopicId" method="post">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="TopicId" />
        <input type="hidden" asp-for="LibraryId" />
        <input type="hidden" asp-for="CreatedAt" />

        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label">Topic Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ParentTopicId" class="form-label">Parent Topic</label>
            <select asp-for="ParentTopicId" class="form-control">
                <option value="">-- None (Root Topic) --</option>
                @if (parentTopics != null)
                {
                    foreach (var t in parentTopics)
                    {
                        <option value="@t.TopicId">@t.Path</option>
                    }
                }
            </select>
            <span asp-validation-for="ParentTopicId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Save Changes</button>
        <a asp-action="Index" asp-route-libraryId="@libraryId" class="btn btn-secondary">Cancel</a>
    </form>
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

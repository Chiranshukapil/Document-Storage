@model IEnumerable<Document_Storage_System.Models.Entities.Topic>
@using Microsoft.AspNetCore.Identity
@inject UserManager<AppUser> UserManager
@inject SignInManager<AppUser> SignInManager

@{
    ViewData["Title"] = "Topics";
    var libraryId = ViewBag.LibraryId as int?;
    var currentUser = await UserManager.GetUserAsync(User);
    var isAdmin = await UserManager.IsInRoleAsync(currentUser, "Admin");
    var search = ViewBag.Search as string;

    var userId = currentUser?.Id;
    var context = Context.RequestServices.GetService(typeof(Document_Storage_System.Data.ApplicationDbContext)) as Document_Storage_System.Data.ApplicationDbContext;
    var canWrite = context.LibraryPermissions
        .Any(lp => lp.LibraryId == libraryId && lp.UserId == userId && lp.CanWrite);
}

<div class="container mt-4">
    <h2 class="mb-4">
        <i class="bi bi-diagram-3-fill text-primary"></i> Topics
    </h2>


    <form asp-action="Index" method="get" class="mb-3">
        <input type="hidden" name="libraryId" value="@libraryId" />
        <div class="input-group">
            <input type="text" name="search" class="form-control" placeholder="Search by name or path..."
                   value="@(search ?? "")" />
            <button class="btn btn-outline-secondary" type="submit">
                <i class="bi bi-search"></i> Search
            </button>
        </div>
    </form>

    @if (isAdmin || canWrite)
    {
        <a class="btn btn-primary mb-3" asp-action="Create" asp-route-libraryId="@libraryId">
            <i class="bi bi-plus-lg"></i> Add New Topic
        </a>
    }

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Parent Topic</th>
                <th>Path</th>
                <th>Created</th>
                <th style="min-width: 200px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var topic in Model)
            {
                <tr>
                    <td>@topic.Name</td>
                    <td>@(topic.ParentTopic?.Name ?? "—")</td>
                    <td><code>@topic.Path</code></td>
                    <td>@topic.CreatedAt.ToString("dd MMM yyyy")</td>
                    <td>
                        <div class="d-flex gap-2">
                            <a class="btn btn-sm btn-info" asp-controller="Document" asp-action="Index" asp-route-topicId="@topic.TopicId">
                                <i class="bi bi-folder2-open"></i> Documents
                            </a>

                            @if (isAdmin || canWrite)
                            {
                                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@topic.TopicId">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@topic.TopicId">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

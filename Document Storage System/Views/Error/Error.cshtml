@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center mt-5">
    <h1 class="display-1 text-warning">⚠️</h1>
    <h2 class="text-danger">Something went wrong.</h2>
    <p class="text-muted mb-4">An unexpected error occurred while processing your request.</p>

    @if (Model.ShowRequestId)
    {
        <p class="text-muted">Request ID: <code>@Model.RequestId</code></p>
    }

    <a class="btn btn-primary mt-3" href="/">Back to Home</a>
</div>
